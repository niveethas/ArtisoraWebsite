@page "/login"
@using ArtisoraServer
@inject NotificationService notif
@inject NavigationManager nav



<RadzenNotification />

<PageTitle>Login</PageTitle>

@*login code from : https://blazor.radzen.com/login*@
<RadzenRow Gap="0" Class="rz-my-12 rz-mx-auto rz-border-radius-6 rz-shadow-10" Style="width: 100%; max-width: 800px; overflow: hidden;">
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Class="rz-shadow-0 rz-border-radius-0 rz-text-align-center rz-p-12" Style="height: 100%; background: var(--rz-primary-light) 100% 70% fixed url('data:image/svg+xml;base64,')">
            <RadzenText TextStyle="TextStyle.DisplayH3" TagName="TagName.H2" Class="rz-color-white rz-mb-6">Welcome to Artisora!</RadzenText>
            <RadzenText TextStyle="TextStyle.H6" Class="rz-color-white">The future of teaching art.</RadzenText>
        </RadzenCard>
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenCard Class="rz-shadow-0 rz-border-radius-0 rz-p-12">
            <RadzenText TextStyle="TextStyle.H5" TagName="TagName.H2" Class="rz-mb-6">
                Login
            </RadzenText>
            <RadzenTemplateForm Data=@("SimpleLogin")>
                <RadzenLogin AllowRegister="false" AllowResetPassword="false" Username="@inputEmail" Password="@inputPassword" Login=@(args => loginUser(args)) AllowRememberMe="false" />
            </RadzenTemplateForm>
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>



@code {
    [Inject]
    public ClientAPI? _api { get; set; }

    public string inputEmail;
    public string inputPassword;
    public Mentor? responseMr;
    public Mentee? response;



    async Task loginUser(LoginArgs la)
    {
        try
        {
            response = await _api.MenteeAsync(la.Username);
        }
        catch
        {
            //call both the mentee and mentor table to see which role the user is
        }
        try{

            responseMr = await _api.MentorAsync(la.Username);

        }catch{

        }
        try
        {
            if ((response != null)&&(responseMr == null))
            {
                //this if statement consideres the user as a mentee
                try
                {
                    var foundPassword = await _api.LoginAsync(la.Username);
                    if ((foundPassword != null) && (foundPassword.Password.ToString().Equals(la.Password)))
                    {
                        CurrentUser._userid = response.MenteeId;
                        CurrentUser._useremail = response.Email;
                        CurrentUser._role = foundPassword.Role;
                        //assign the global static variables to be used through out the system
                        int? currentRole = CurrentUser._role;
                        if (currentRole != null)
                        {
                            //change the nav menu to hide options based on role, and change header for all logged in users
                            MainLayout.viewSu = false;
                            MainLayout.viewSo = true;
                            MainLayout.viewLi = false;
                            if (currentRole == 1)
                            {
                                MainLayout.viewWork = true;
                                MainLayout.viewUploadWork = true;
                                MainLayout.viewContact = true;
                            }
                            else if (currentRole == 2)
                            {
                                MainLayout.viewMs = true;
                                MainLayout.viewShowcase = true;
                                MainLayout.viewAddMs = true;
                            }
                        }
                        nav.NavigateTo("/imageView");
                    }else{
                        var notifMsg = new NotificationMessage { Severity = NotificationSeverity.Warning, Summary = "Error", Detail = "Incorrect Password", Duration = 4000 };
                        notif.Notify(notifMsg);
                    }
                }
                catch (Exception ex)
                {
                    var notifMsg = new NotificationMessage { Severity = NotificationSeverity.Error, Summary = "Error", Detail = "Login failed", Duration = 4000 };
                    notif.Notify(notifMsg);
                }
            }else if ((response == null)&&(responseMr != null)){
                //this if statement is for mentors
                try
                {
                    var foundPassword = await _api.LoginAsync(la.Username);
                    if ((foundPassword != null) && (foundPassword.Password.ToString().Equals(la.Password)))
                    {
                        CurrentUser._userid = responseMr.MentorId;
                        CurrentUser._useremail = responseMr.Email;
                        CurrentUser._role = foundPassword.Role;
                        int? currentRole = CurrentUser._role;
                        if (currentRole != null)
                        {
                            MainLayout.viewSu = false;
                            MainLayout.viewSo = true;
                            MainLayout.viewLi = false;

                            if (currentRole == 1)
                            {
                                MainLayout.viewWork = true;
                                MainLayout.viewUploadWork = true;
                                MainLayout.viewContact = true;
                            }
                            else if (currentRole == 2)
                            {
                                MainLayout.viewMs = true;
                                MainLayout.viewShowcase = true;
                                MainLayout.viewAddMs = true;
                            }
                        }
                        nav.NavigateTo("/imageViewMentor");
                    }
                    else
                    {
                        var notifMsg = new NotificationMessage { Severity = NotificationSeverity.Warning, Summary = "Error", Detail = "Incorrect Password", Duration = 4000 };
                        notif.Notify(notifMsg);
                    }
                }
                catch (Exception ex)
                {
                    var notifMsg = new NotificationMessage { Severity = NotificationSeverity.Error, Summary = "Error", Detail = "Login failed", Duration = 4000 };
                    notif.Notify(notifMsg);
                }
            }
            else
            {
                var notifMsg = new NotificationMessage { Severity = NotificationSeverity.Warning, Summary = "Error", Detail = "Email does not have an existing account", Duration = 5000 };
                notif.Notify(notifMsg);
                //email could not be found in either database
            }
        }
        catch (Exception ex)
        {
            var notifMsg = new NotificationMessage { Severity = NotificationSeverity.Error, Summary = "Error", Detail = "Login failed", Duration = 4000 };
            notif.Notify(notifMsg);
        }
    }

}